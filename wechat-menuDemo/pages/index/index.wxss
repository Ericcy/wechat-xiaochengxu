/**index.wxss**/
@keyframes slidown{
  from{
    transform:  translateY(-100%);
  }
  to{
    transform:  translateY(0%);
  }
}

@keyframes slidup{
  from{
    transform:  translateY(0%);
  }
  to{
    transform:  translateY(-100%);
  }
}
.slidown{
  animation: slidown .5s ease-in both;
}
.slidup{
  animation: slidup .5s ease-in both;
}
.fullbg{
  position: fixed;
  top:0;
  z-index: 98;
  width: 100%;
  height: 100%;
  background: rgb(1, 1, 1);
  transition: all 0.5s;
  opacity: 0;
}
.fullopacity{
  opacity: .5;
}


.nav{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  z-index: 100;
  background-color: #fff;
  position: relative;


}
.nav-c{
  flex: 1;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #eee;
}
.nav-c2{
  border-left: none;
  border-right: none;
}
.active{
  color:#3399ff;
}
.box{
  font-size: 26rpx;
  max-height: 480rpx;
  overflow-y: scroll;
  position: relative;
  z-index: 99;
  background-color: #ffffff;
}
.box view{
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eef;
}