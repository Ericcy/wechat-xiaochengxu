/**app.wxss**/
@import "./comm/style/animation.wxss";
page {
  font-family: "微软雅黑";
  font-size: 28rpx;
}
.loading{
    width: 200rpx;
    height: 200rpx;
    position: fixed;
    z-index: 999;
    left: 50%;
    top: 50%;
    margin-top: -100rpx;
    margin-left: -100rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 16rpx;
    color: #ffffff;
    text-align: center;
    font-size: 24rpx;
    animation: fadeIn 0.6s;
}
.loading-image{
    height: 80rpx;
    width: 80rpx;
    margin-top: 20px;
}
.loading-content{
    margin-top: 15rpx;
}
.message{
    width: 250rpx;
    height: 250rpx;
    position: fixed;
    z-index: 999;
    left: 50%;
    top: 50%;
    margin-top: -125rpx;
    margin-left: -125rpx;
    background-color: rgba(0, 0, 0, .75);
    border-radius: 16rpx;
    color: #ffffff;
    text-align: center;
    font-size: 32rpx;
    animation: fadeIn 0.6s;
}
.message-image{
    height: 100rpx;
    width: 100rpx;
    margin-top: 20px;
}
.message-content{
    margin-top: 20rpx;
}
